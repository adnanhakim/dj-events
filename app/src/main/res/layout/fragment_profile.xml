<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/sivProfileDp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/circularImage"
            android:src="@color/white"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <RelativeLayout
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="@id/sivProfileDp"
            app:layout_constraintBottom_toBottomOf="@id/sivProfileDp"
            app:layout_constraintStart_toEndOf="@id/sivProfileDp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/tvProfileName"
                android:text="DJ CSI"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvProfileDepartment"
                android:ellipsize="end"
                android:layout_below="@id/tvProfileName"
                android:text="Information Technology"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintProfileStats"
            android:layout_marginTop="16dp"
            android:layout_margin="16dp"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/sivProfileDp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guidelineProfile33"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvProfileFollowers"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="24sp"
                    android:text="126"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_below="@id/tvProfileFollowers"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="16sp"
                    android:text="Followers"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineProfile33"
                android:layout_width="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.33"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/guidelineProfile33"
                app:layout_constraintEnd_toStartOf="@id/guidelineProfile67"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvProfilePosts"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="24sp"
                    android:text="23"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_below="@id/tvProfilePosts"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="16sp"
                    android:text="Posts"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineProfile67"
                android:layout_width="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.67"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/guidelineProfile67"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvProfileEvents"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="24sp"
                    android:text="2"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_below="@id/tvProfileEvents"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="16sp"
                    android:text="Events"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btnProfileEdit"
            android:layout_width="match_parent"
            android:fontFamily="@font/montserrat_medium"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginHorizontal="16dp"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/btnProfileLogout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintProfileStats"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnProfileLogout"
            android:fontFamily="@font/montserrat_medium"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="@color/white"
            android:background="@drawable/button_style_1"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnProfileEdit"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>